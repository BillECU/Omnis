<p id="notice"><%= notice %></p>

<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1>Courses</h1>
    <table cellspacing="40">>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>  
              <button class= "btn btn-success">
            <td><%= link_to subject.name, subject, class: "btn btn-success" %></td>  
          </button>
            &nbsp;
            <td><%= link_to 'Edit', edit_subject_path(subject) %></td> 
            &nbsp;   
            <td><%= link_to 'Delete', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <br>
            <br>
<!--             &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; -->
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <br>
    <br>
    <%= link_to "Add Course?", new_subject_path, class: "btn btn-lg btn-primary" %>

</div>


