<p id="notice"><%= notice %></p>

<h1>Assignments</h1>
<%= month_calendar do |date| %>
  <%= date.day %>
  <% if @assignments_by_date[date] %>
  <ul>
    <%= @assignments_by_date[date].each do |a| %>
      <li><%= link_to a.name, a %></li>
      <% end %>
  </ul>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.name %></td>
        <td><%= assignment.start_time %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Assignment', new_assignment_path %>
